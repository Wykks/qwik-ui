{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "cypress",
      "cypress-axe",
      "@testing-library/cypress",
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "src/**/*.cy.ts",
    "src/**/*.cy.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
  "exclude": ["**/*.stories.tsx", "**/*.stories.ts", "**/*.stories.js", "**/*.driver.ts"]
}
